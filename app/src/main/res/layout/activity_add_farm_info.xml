<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddFarmInfoActivity">

  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/please_provide_farm_related_information" />

      <EditText
          android:id="@+id/farmNameEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:autofillHints="name"
          android:drawableStart="@drawable/ic_farm"
          android:drawablePadding="8dp"
          android:hint="@string/farm_name"
          android:inputType="textPersonName" />

      <EditText
          android:id="@+id/ownerNameEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:autofillHints="name"
          android:drawableStart="@drawable/ic_person"
          android:drawablePadding="8dp"
          android:hint="@string/owner_name"
          android:inputType="textPersonName" />

      <EditText
          android:id="@+id/ownerNIDEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:autofillHints="creditCardNumber"
          android:drawableStart="@drawable/ic_id"
          android:drawablePadding="8dp"
          android:hint="@string/owner_nid"
          android:inputType="number" />

      <EditText
          android:id="@+id/registeredNumberEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:autofillHints="phone"
          android:drawableStart="@drawable/ic_bd_flag"
          android:drawablePadding="8dp"
          android:hint="@string/your_registered_number"
          android:inputType="phone" />

      <EditText
          android:id="@+id/alternativeNumberEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:autofillHints="phone"
          android:drawableStart="@drawable/ic_bd_flag"
          android:drawablePadding="8dp"
          android:hint="@string/alternative_number"
          android:inputType="phone" />

      <EditText
          android:id="@+id/farmAddressEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:autofillHints="postalAddress"
          android:drawableStart="@drawable/ic_location"
          android:drawablePadding="8dp"
          android:hint="@string/farm_address"
          android:inputType="textPostalAddress" />

      <EditText
          android:id="@+id/farmDescriptionEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:autofillHints="name"
          android:drawableStart="@drawable/ic_note"
          android:drawablePadding="8dp"
          android:hint="@string/farm_description"
          android:inputType="text" />

      <EditText
          android:id="@+id/noOfCattleEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:autofillHints="creditCardNumber"
          android:drawableStart="@drawable/ic_cattle_head"
          android:drawablePadding="8dp"
          android:hint="@string/no_of_cattle"
          android:inputType="number" />

      <Button
          android:id="@+id/submitButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="16dp"
          android:layout_marginBottom="16dp"
          android:paddingHorizontal="32dp"
          android:paddingVertical="16dp"
          android:text="@string/submit" />
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
