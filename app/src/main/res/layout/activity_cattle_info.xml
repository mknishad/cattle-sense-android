<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CattleInfoActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addNewCattleCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@id/cattleListCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/addNewCattleLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp">

        <ImageView
            android:id="@+id/addNewCattleImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/add_new_cattle"
            android:src="@drawable/ic_add_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addNewCattleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="@string/add_new_cattle"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addNewCattleImageView" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cattleListCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/addNewCattleCard"
        app:layout_constraintTop_toTopOf="@id/addNewCattleCard">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cattleListLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp">

        <ImageView
            android:id="@+id/cattleListImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/cattle_list"
            android:src="@drawable/ic_cattle_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cattleListTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="@string/cattle_list"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cattleListImageView" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/milkProductionCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@id/weightTrackerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addNewCattleCard">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/milkProductionLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp">

        <ImageView
            android:id="@+id/milkProductionImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/milk_production"
            android:src="@drawable/ic_milk_production"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/milkProductionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="@string/milk_production"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/milkProductionImageView" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weightTrackerCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/milkProductionCard"
        app:layout_constraintTop_toTopOf="@id/milkProductionCard">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/weightTrackerLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp">

        <ImageView
            android:id="@+id/weightTrackerImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/weight_tracker"
            android:src="@drawable/ic_weight_tracker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/weightTrackerTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="@string/weight_tracker"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weightTrackerImageView" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/deathRecordCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/heatNotificationCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/milkProductionCard">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/deathRecordLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp">

        <ImageView
            android:id="@+id/deathRecordImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/death_record"
            android:src="@drawable/ic_death_record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deathRecordTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="@string/death_record"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deathRecordImageView" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/heatNotificationCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/deathRecordCard"
        app:layout_constraintTop_toTopOf="@id/deathRecordCard">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/heatNotificationLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp">

        <ImageView
            android:id="@+id/heatNotificationImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/heat_notification_alert"
            android:src="@drawable/ic_heat_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/heatNotificationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="@string/heat_notification_alert"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heatNotificationImageView" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
